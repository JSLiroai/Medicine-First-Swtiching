<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_rate_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="0.0"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/review_rate_avg_star"
        app:layout_constraintStart_toStartOf="@+id/review_rate_avg_star"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/review_rate_avg_star"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:indeterminateTint="#FFC107"
        android:progressTint="#FFC107"
        android:rating="0"
        android:secondaryProgressTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_rate_avg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:foregroundTint="#02222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/review_rate_avg_star"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/review_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/review_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_textView" />

        <TextView
            android:id="@+id/review_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_textView2" />

        <TextView
            android:id="@+id/review_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_textView3" />

        <TextView
            android:id="@+id/review_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review_textView4" />

        <ProgressBar
            android:id="@+id/review_rate_5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:indeterminateTint="#FFC107"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            app:layout_constraintBottom_toBottomOf="@+id/review_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/review_textView"
            app:layout_constraintTop_toTopOf="@+id/review_textView" />

        <ProgressBar
            android:id="@+id/review_rate_1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:indeterminateTint="#FFC107"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            app:layout_constraintBottom_toBottomOf="@+id/review_textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/review_textView"
            app:layout_constraintTop_toTopOf="@+id/review_textView6" />

        <ProgressBar
            android:id="@+id/review_rate_4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:indeterminateTint="#FFC107"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            app:layout_constraintBottom_toBottomOf="@+id/review_textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/review_textView"
            app:layout_constraintTop_toTopOf="@+id/review_textView2" />

        <ProgressBar
            android:id="@+id/review_rate_2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:indeterminateTint="#FFC107"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            app:layout_constraintBottom_toBottomOf="@+id/review_textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/review_textView"
            app:layout_constraintTop_toTopOf="@+id/review_textView4" />

        <ProgressBar
            android:id="@+id/review_rate_3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:indeterminateTint="#FFC107"
            android:progressTint="#FFC107"
            android:secondaryProgressTint="#FFC107"
            app:layout_constraintBottom_toBottomOf="@+id/review_textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/review_textView"
            app:layout_constraintTop_toTopOf="@+id/review_textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>